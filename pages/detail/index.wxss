/* pages/detail/index.wxss */
.swiper-img{
  width: 100%;
}

.card {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
}

.card-content {
  position: absolute;
  top: -40rpx;
  z-index: 2;
  background: #ffffff;
  width: 640rpx;
  height: 240rpx;
  text-align: center;
  box-shadow: 10px 10px 5px #888888;
  border-radius: 20rpx;
}

.list-container {
  margin-top: 180rpx;
}

.item-name {
  display: inline-block;
  width: 40%;
  margin: 50rpx 0;
  padding: 0 20rpx;
  text-align: center;
}

.add-more {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-top: 20rpx solid #666;
  border-bottom: 20rpx solid #666;
  margin-bottom: 100rpx;
}


.add {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: orange;
}